{
  "manifest_version": 2,
  "name": "Search smarter",
  "version": "1.0",

  "description": "No words needed",

  "page_action": {
    "default_icon": "iconRed.png",
    "default_popup": "popup.html",
    "default_title": "Suggestions"
  },
  "background": {
    "scripts":["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "https://www.google.com/search?q=*"],
      "js": ["jquery-3.2.0.min.js", "google_cs.js", "patterns.js"]
    }
  ],

  "permissions": [
    "tabs",
    "https://google.com/*"
  ]
}
