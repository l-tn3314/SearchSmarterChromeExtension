{
  "manifest_version": 2,
  "name": "Search smarter",
  "version": "1.0",

  "description": "No words needed",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Suggestions"
  },
  
  "permissions": [
    "activeTab",
    "declarativeContent"
  ]
}
